@model MagasinDeVoitures.ViewModels.VoituresIndexViewModel

@{
	ViewData["Title"] = "Toutes les voitures";
}

<h1>Toutes les voitures</h1>
<table class="table">
	<thead>
		<tr>
			<th>Marque</th>
			<th>Modèle</th>
			<th>Année</th>
			<th>Édition</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (Voiture item in Model.Voitures)
		{
			<tr>
				<td>@item.Make</td>
				<td>@item.Model</td>
				<td>@item.Year</td>
				<td>@item.Edition</td>
				<td>
					@Html.ActionLink("Détails", "Details", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
